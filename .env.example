# .env.example
# Rename to `.env.local` for local development.
# Any variable prefixed with NEXT_PUBLIC_ is exposed to the browser.

########## App ##########
APP_NAME=codex-os
NODE_ENV=development
APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=3000

########## Auth & Billing (Clerk) ##########
# Clerk publishable key is safe for client usage.
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXX
# Secret server key (never expose to the client).
CLERK_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXX
# Webhook secret for verifying Clerk webhooks (optional, recommended).
CLERK_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXX
# Optional custom routes
CLERK_SIGN_IN_URL=/sign-in
CLERK_SIGN_UP_URL=/sign-up

########## Database / State (Convex) ##########
# Client URL for Convex; dev server usually runs at http://localhost:8187.
# For production, use: https://<deployment>.convex.cloud
NEXT_PUBLIC_CONVEX_URL=http://localhost:8187
# Select a specific deployment (optional; e.g., dev:codex-os or prod:codex-os)
CONVEX_DEPLOYMENT=dev:codex-os
# Server-side admin key for actions/backfills (optional; do not expose).
CONVEX_ADMIN_KEY=

########## AI Providers (AI SDK) ##########
# Provide at least one. Uncomment/use what you need.
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=
GROQ_API_KEY=
OPENROUTER_API_KEY=
FIREWORKS_API_KEY=
# Optional: adjust SDK logging/noise
AI_SDK_LOG_LEVEL=info

########## Storage (S3-compatible; optional) ##########
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=
# MinIO in dev, or leave blank for AWS S3
AWS_S3_ENDPOINT=http://localhost:9000
AWS_S3_FORCE_PATH_STYLE=true

########## Relational Sidecar (optional Postgres) ##########
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/codex_os
SHADOW_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/codex_os_shadow

########## Cache / Queues (optional) ##########
REDIS_URL=redis://localhost:6379
# Upstash (optional)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

########## Observability ##########
# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=local
# OpenTelemetry
OTEL_SERVICE_NAME=codex-os
OTEL_EXPORTER_OTLP_ENDPOINT=
# Example: Authorization=Bearer <token>
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=local

########## Webhooks (generic) ##########
WEBHOOK_SECRET=

########## Hosting: Cloudflare (optional) ##########
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_PAGES_PROJECT=
CLOUDFLARE_WORKER_NAME=
CF_PAGES_BRANCH=main

########## Hosting: Vercel (optional) ##########
VERCEL_PROJECT_ID=
VERCEL_ORG_ID=
VERCEL_API_TOKEN=

########## Feature flags (client-visible) ##########
NEXT_PUBLIC_FEATURE_EXAMPLE=false

########## Misc ##########
# Disable Next telemetry if desired
NEXT_TELEMETRY_DISABLED=1
